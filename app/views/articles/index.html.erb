<h1>Welcome to my Blog</h1>

<% @articles.each do |article| %>
	<h2><%= link_to article.title, article %></h2>
	<p>
		<%= time_ago_in_words article.created_at %> ago
	</p>
	<p>
		<%= truncate article.body %>
	</p>
	<% end %>


<%= render @articles %>
<p>
	<%= link_to "New article", new_article_path %>
</p>